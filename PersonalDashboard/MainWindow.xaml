<Window x:Class="PersonalDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalDashboard"
        xmlns:views="clr-namespace:PersonalDashboard.Views"
        mc:Ignorable="d"
        Title="Dashboard"
        WindowStyle="None"
        WindowState="Maximized"
        AllowsTransparency="False"
        ResizeMode="NoResize" 
        MouseDown="Window_MouseDown">

    <Window.Background>
        <ImageBrush ImageSource="/Wallpaper/chrome.png" Stretch="UniformToFill"/>
    </Window.Background>
    
    <Grid>
        <Rectangle Fill="#66000000"/>

        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        

            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource DashboardCard}">
                <views:ClockWidget/>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" CornerRadius="12" Background="#CC1E1E1E" Padding="16" Margin="12" Style="{StaticResource DashboardCard}">
                <views:CalendarWidget/>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource DashboardCard}">
                <views:ToDoWidget/>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource DashboardCard}">
                <views:WeatherWidget/>
            </Border>
        </Grid>
        <!-- HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
         HorizontalAlignment="Center" VerticalAlignment="Top"/>
         HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"/>
         HorizontalAlignment="Center" VerticalAlignment="Bottom"/>-->
    </Grid>
</Window>
