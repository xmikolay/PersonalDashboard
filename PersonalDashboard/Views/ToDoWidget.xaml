<UserControl x:Class="PersonalDashboard.Views.ToDoWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalDashboard.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Task input -->
        <StackPanel Orientation="Horizontal">
            <TextBox Width="200" Text="{Binding NewTaskText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>
            <Button Content="Add" Command="{Binding AddTaskCommand}"/>
        </StackPanel>

        <!-- Task list -->
        <ListBox Grid.Row="1" ItemsSource="{Binding Tasks}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <CheckBox IsChecked="{Binding IsCompleted}" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding Description}" VerticalAlignment="Center"/>
                        <Button Content="X"
                                DockPanel.Dock="Right"
                                Command="{Binding DataContext.RemoveTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}" Margin="5,0,0,0"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
